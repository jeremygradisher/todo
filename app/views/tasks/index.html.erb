<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks-list">
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %><br>
        <%= task.description %></td>
        <td><%= task.state %></td>

        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<br>

<%= link_to 'New Task', new_task_path %>